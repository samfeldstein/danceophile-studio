---
import Social from "./Social.astro";
import Logo from "./Logo.astro";
---

<nav>
  <!-- <div class="title">Navigation</div> -->
  <Logo class:list={"logo"}/>

  <div class="links">
    <a href="/">Home</a>
    <a href="/about/">Meet Tom</a>
    <a href="/lessons/">Lessons</a>
    <a href="/events/">Events</a>
    <a href="/postoley/">Postoley</a>
  </div>
</nav>

<div class="contact">
  <div class="title">Contact</div>
  <div class="email phone">
    <a href="mailto:masterst@colorado.edu">masterst@colorado.edu</a>
    <a href="tel:+13034996363">(303) 499-6363</a>
  </div>
</div>
<div class="resources">
  <div class="title">Resources</div>
  <div>
    <a href="/folk-dance-database.xls">Folk Dance Database</a>
  </div>
</div>
<Social />

<style>
  nav,
  .contact,
  .resources {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    border-radius: 2px;
    background-color: var(--background-color);
  }

  .contact {
    align-items: center;
  }

  a {
    font-family: var(--font-4);
    font-variant: small-caps;
    padding: 0.5em 1em;
    border-radius: 2px;
  }

  .links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social,
  .email.phone {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .title {
    font-family: var(--font-1);
  }

  .logo {
    gap: 1rem;
    color: black;
    font-size: 1.5rem;
  }
</style>
