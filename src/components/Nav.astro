---
import Social from "./Social.astro";
---

<nav>
  <div class="title">Navigation</div>

  <div class="links">
    <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/lessons/">Lessons</a>
    <a href="/events/">Events</a>
    <a href="/postoley/">Postoley</a>
  </div>
</nav>

<div class="contact">
  <div class="title">Contact</div>
  <div class="email phone">
    <a href="mailto:masterst@colorado.edu">masterst@colorado.edu</a>
    <a href="tel:+13034996363">(303) 499-6363</a>
  </div>
</div>
<div class="resources">
  <div class="title">Resources</div>
  <div>
    <a href="/folk-dance-database.xls">Folk Dance Database</a>
  </div>
</div>
<Social />

<style>
  nav,
  .contact,
  .resources {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    border-radius: 2px;
    background-color: var(--background-color);
  }

  .contact {
    align-items: center;
  }

  a {
    font-family: var(--font-4);
    font-variant: small-caps;
    padding: 0 0.5rem;
    transition:
      color 0.3s ease,
      background-color 0.3s ease;
    border-radius: 2px;
  }

  a:hover,
  a:focus {
    color: var(--background-color);
    background-color: var(--color-2);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    filter: drop-shadow(0px 2px 2px #4e4e4e);
  }

  .links {
    display: flex;
    justify-content: space-evenly;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social,
  .email.phone {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
