---
import Nav from "./Nav.astro";
---

<aside>
  <div class="container">
    <Nav />
  </div>
</aside>

<style>
  aside {
    grid-area: sidebar;
    margin-right: 2rem;
    border-right-style: solid;
    border-right-width: 1px;
    padding: 0 2rem;
    text-align: center;

    @media screen and (max-width: 1000px) {
      display: none;
    }
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: sticky;
    top: 1rem;
    border-radius: 5px;
    background-color: var(--background-color);
    filter: drop-shadow(0px 1px 1px black);
  }
</style>

<style is:global>
  aside nav,
  aside .contact,
  aside .resources {
    padding: 1rem;
  }

  aside .links {
    justify-content: space-between;
  }
</style>
