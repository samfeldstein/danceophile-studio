---
import Nav from "./Nav.astro";
---

<details class="text-center">
  <summary class="border drop-shadow">Menu</summary>
  <div class="parent flex">
    <div class="content border drop-shadow flex">
      <Nav />
    </div>
  </div>
</details>

<style>
  details {
    font-family: var(--font-1);
    position: sticky;
    top: 0;
    z-index: 1;

    @media screen and (min-width: 1200px) {
      display: none;
    }
  }

  summary {
    background-color: var(--color-3);
    color: var(--background-color);
    padding: 0.5em 0;
    margin: 0 0.25rem;
    border-radius: 2px;
    position: sticky;
    top: 0;
    z-index: 1;
  }

  .parent {
    justify-content: center;
  }

  .content {
    width: 95%;
    background-color: var(--background-color);
    padding: 1rem;
    gap: 2rem;
    flex-direction: column;
    align-items: center;
    border-radius: 2px;
    margin-top: -3px;
    position: absolute;
  }
</style>
