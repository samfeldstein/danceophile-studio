---
// Components
import Icons from "../components/Icons.astro";

// Data
import { site } from "../../config.mjs";

// Styles
import "/src/styles/global.css";

// Props
const { title, description } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    rel="preload"
    href="/fonts/Showboat.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/fonts/GrusskartenGotisch.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/fonts/OstrovskyBold.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/fonts/Tinos-Bold.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/fonts/Tinos-Regular.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description || site.description} />
  <title>{title} | {site.title}</title>
  <Icons />
</head>
