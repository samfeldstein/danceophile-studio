---
import Copyright from "./Copyright.astro";
import Social from "./Social.astro";
import Logo from "./Logo.astro";
import HorizontalRule from "./HorizontalRule.astro";
---

<footer>
  <div class="hr">
    <HorizontalRule />
  </div>
  <Logo class="logo" />

  <small>
    <a
      class="address"
      href="https://maps.app.goo.gl/7fttA6CCH5VmFk1S9"
      target="_blank"
    >
      <div>Danceophile Studio</div>
      <div>250 31st St</div>
      <div>Boulder, CO 80305</div>
    </a>
    <Social />
    <div class="email phone">
      <a href="mailto:masterst@colorado.edu">masterst@colorado.edu</a>
      <a href="tel:+13034996363">(303) 499-6363</a>
    </div>
  </small>

  <Copyright />
</footer>

<style>
  footer {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  small {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    margin: 2rem 0;
  }

  small a {
    font-family: var(--font-4);
    display: block;
    padding: 0.25rem 0;
    text-align: left;
  }

  .email.phone a {
    text-align: right;
  }

  .hr {
    max-width: 75rem;
    width: 100%;
    padding: 0 1rem;
  }

  .logo {
    font-size: calc(3rem);
  }
</style>

<style is:global>
  footer .social {
    padding: 2rem 0;
  }
</style>
