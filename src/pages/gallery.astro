---
// Layout
import Base from "../layouts/Base.astro";

// Components
import MainContent from "../components/MainContent.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";

// Images
import cover from "/src/images/tom-and-kami.jpg";
import eclipse from "/src/images/eclipse.jpeg";
import eclipse2 from "/src/images/eclipse-2.jpeg";
---

<Base title="Gallery">
  <Header>
    <h1>Gallery</h1>
  </Header>
  <MainContent>
    <Image
      src={cover}
      class="cover"
      widths={[240, 540, 720, cover.width]}
      sizes="(min-width: 1220px) 821px, (min-width: 860px) calc(85.88vw - 210px), calc(100vw - 32px)"
      alt="A selfie of Tom Masterson a snowy winter day."
      fetchpriority="high"
      loading="eager"
    />
    <Image
      src={eclipse}
      class="cover"
      widths={[240, 540, 720, eclipse.width]}
      sizes="(min-width: 1220px) 821px, (min-width: 860px) calc(85.88vw - 210px), calc(100vw - 32px)"
      alt="A total solar eclipse."
    />
    <Image
      src={eclipse2}
      class="cover"
      widths={[240, 540, 720, eclipse2.width]}
      sizes="(min-width: 1220px) 821px, (min-width: 860px) calc(85.88vw - 210px), calc(100vw - 32px)"
      alt="A total solar eclipse from another angle."
    />
  </MainContent>
</Base>

<style>
  img {
    min-width: 100%;
    margin-bottom: 1rem;
  }
</style>
